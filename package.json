{
  "name": "plutin-boilerplate-common",
  "version": "1.0.0",
  "description": "Plutin boilerplate-common",
  "private": false,
  "main": "./dist/main.cjs",
  "type": "module",
  "keywords": [],
  "author": "Pablo",
  "license": "ISC",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "prod": "node dist/main.cjs",
    "build": "tsup",
    "prepare:husky": "husky install",
    "eslint:fix": "npx eslint --fix src/**/*.ts",
    "prettier:format": "prettier --write src/**/*.ts",
    "lint-staged": "lint-staged",
    "test": "vitest run --reporter=verbose",
    "test:unit": "vitest run --reporter=verbose --dir src/domain",
    "test:integration": "vitest run --reporter=verbose --dir src/application/use-cases",
    "test:e2e": "vitest run --reporter=verbose --dir src/infra/controllers",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run eslint:fix",
      "npm run prettier:format"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.24.0",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/node": "20.0.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.1.3",
    "commitlint": "19.8.0",
    "dotenv": "16.5.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.2.5",
    "supertest": "7.1.0",
    "tsconfig-paths": "4.2.0",
    "tsup": "7.2.0",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.0",
    "vite-node": "3.1.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "dependencies": {
    "plutin": "1.4.0",
    "zod": "3.24.3"
  }
}